pipeline {
    agent any
    tools {
        jdk 'jdk-17'  // Replace with your JDK name configured in Jenkins
        maven 'maven'  // Replace with your Maven name configured in Jenkins
    }

    stages {
        stage('Git') {
            steps {
                echo 'Pull code from GitHub'
                git url: 'https://github.com/Natha-UST/EurekaServer', branch: 'main'
            }
        }

        stage('Build') {
            steps {
                echo 'Build Maven'
                bat "mvn clean install -DskipTests"
            }
        }

        stage('Test') {
            steps {
                echo 'Test Application'
                bat "mvn test"
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploy project'
                bat "docker build -t registry-service ."
                bat "docker run -p 8761:8761 -d --name registry-sr registry-service"
            }
        }
    } // Close the stages block
} // Close the pipeline block
